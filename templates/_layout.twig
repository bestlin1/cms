<!DOCTYPE html>
<html lang="{{ craft.app.language|slice(0, 2) }}">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta charset="utf-8" />
        <meta name="viewport"
              content="width=device-width, initial-scale=1, minimum-scale=1" />

        {{ craft.vite.script('src/js/app.js', false) }}

        {% hook 'seo' %}

        {{ head() }}

        <style>
            [x-cloak] {
                display: none !important;
            }
        </style>
    </head>
    <body class="bg-gray-100">
        <div class="mx-auto max-w-[2560px] bg-white px-2">
            <header>
                {% block header %}
                {% endblock %}
            </header>

            <main>
                {% block main %}
                {% endblock %}
            </main>

            <footer>
                {% block footer %}
                {% endblock %}
            </footer>
        </div>
    </body>
</html>
